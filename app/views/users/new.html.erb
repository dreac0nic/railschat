<% @page_title = "New User -- STUPID NAME FIX PLEASE" %>
<div class="signup_form">
  <h1>User Account Signup</h1>
  
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |form| %>
  <h2><%= form.label :handle %></h2>
  <p><%= form.text_field :handle %></p>
  <h2><%= form.label :email %></h2>
  <p><%= form.text_field :email %></p>
  <h2><%= form.label :password %></h2>
  <p><%= form.password_field :password %></p>
  <h2><%= form.label :password_confirmation %></h2>
  <p><%= form.password_field :password_confirmation %></p>

  <%= form.submit "Create" %>
  <% end %>

  <% if @user.errors.any? %>
  <ul class="signup_errors">
    <% for error_message in @user.errors.full_messages %>
    <li><%= error_message %></li>
    <% end %>
  </ul>
  <% end %>
</div>
